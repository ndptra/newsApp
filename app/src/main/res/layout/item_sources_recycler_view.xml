<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="sources"
            type="com.example.newsapplication.model.Sources"/>
    </data>
    <LinearLayout
        android:id="@+id/SourcesRVLayout"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/SourcesItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sources.category}"
            android:textSize="12sp"
            android:textAllCaps="true"
            />
        <TextView
            android:id="@+id/SourcesItemName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{sources.name}"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/sourcesDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="@{sources.description}"
            />
    </LinearLayout>
</layout>
